<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:id="@+id/linearLayoutRecycleMenuChiTietOrder"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:background="@drawable/dinhdang_soluong">

    <TextView
        android:id="@+id/txtTenChiTietOrder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:forceHasOverlappingRendering="false"
        android:gravity="center"
        android:text="@string/item_gv_monan_tenmon"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSoLuong"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="So"
            android:textColor="@color/colorBack"
            android:textSize="15sp"
            android:visibility="gone" />
        <TextView
            android:text="@string/item_gv_monan_dongia"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:textColor="@color/color"
            android:textSize="15sp"
            android:id="@+id/txtGiaChiTietOrder" />
    </LinearLayout>


</LinearLayout>