<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguye.restaurant_project.activity.DangNhapActivity"
    android:background="@color/blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/lnDangNhap"
        android:text="@string/dangnhap"
        android:textSize="@dimen/size40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="@dimen/size130dp"
        android:layout_height="@dimen/size130dp"
        android:src="@drawable/cooker"
        android:layout_above="@id/lnDangNhap"
        android:layout_alignRight="@id/lnDangNhap"
        android:layout_marginTop="@dimen/size10dp"/>
    <LinearLayout
        android:id="@+id/lnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/edTenDangNhap"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="@dimen/size10dp"
            android:hint="@string/tendangnhap"
            android:padding="@dimen/size10dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_marginBottom="@dimen/size10dp"
            android:singleLine="true"
            android:textColor="@color/colorStrokeButton"/>
        <EditText
            android:id="@+id/edMatKhauDN"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="@dimen/size10dp"
            android:singleLine="true"
            android:hint="@string/tendangnhap"
            android:padding="@dimen/size10dp"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_marginBottom="@dimen/size10dp"
            android:textColor="@color/colorStrokeButton"
            android:password="true"/>
        <Button
            android:id="@+id/btnDongyDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dongy"
            android:padding="@dimen/size10dp"
            android:background="@color/colorText"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"
            android:layout_marginBottom="@dimen/size10dp"/>
        <Button
            android:id="@+id/btnDangkyDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dangky"
            android:padding="@dimen/size10dp"
            android:background="@color/colorHelp"
            android:layout_marginLeft="@dimen/size10dp"
            android:layout_marginRight="@dimen/size10dp"/>
    </LinearLayout>


</RelativeLayout>
